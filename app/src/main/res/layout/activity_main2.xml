<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TabHost
        android:id="@+id/tbhConversores"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:orientation="horizontal" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                //////////////////////////////////////////////////////////////////////////

                <RelativeLayout
                    android:id="@+id/tabMONEDAS"
                    android:layout_width="match_parent"
                    android:layout_height="667dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDEMONEY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="40dp"
                        android:text="DE:"
                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/spDEMONEY"
                        android:layout_width="257dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="25dp"
                        android:entries="@array/Monedas" />

                    <TextView
                        android:id="@+id/tvAMONEY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="90dp"
                        android:text="A:"
                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/spAMONEY"
                        android:layout_width="257dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="80dp"
                        android:entries="@array/Monedas" />


                </RelativeLayout>
                ////////////////////////////////////////////////////////////////////////////////////

                <RelativeLayout
                    android:id="@+id/tabMASA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDEMASA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="40dp"
                        android:text="DE:"
                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/spDEMASA"
                        android:layout_width="257dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="25dp"
                        android:entries="@array/Masa" />

                    <TextView
                        android:id="@+id/tvAMASA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="90dp"
                        android:text="A:"
                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/spAMASA"
                        android:layout_width="257dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="80dp"
                        android:entries="@array/Masa" />
                </RelativeLayout>
                //////////////////////////////////////////////////////////////////////////////////////////////////

                <RelativeLayout
                    android:id="@+id/tabVOLUMEN"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDEVOLUMEN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="40dp"
                        android:text="DE:"
                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/spDEVOLUMEN"
                        android:layout_width="257dp"
                        android:layout_height="50dp"

                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="25dp"
                        android:entries="@array/Volumen" />

                    <TextView
                        android:id="@+id/tvAVOLUMEN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="90dp"
                        android:text="A:"
                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/spAVOLUMEN"
                        android:layout_width="257dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="80dp"
                        android:entries="@array/Volumen" />
                </RelativeLayout>
                /////////////////////////////////////////////////////////////////


            </FrameLayout>
        </LinearLayout>
    </TabHost>
    /////////////////////////////////////////////////////////////////////
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/etCANTIDAD"
            android:layout_width="394dp"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="200dp"
            android:ems="10"
            android:hint="INGRESE UNA CANTIDAD" />

        <Button
            android:id="@+id/btnCONVERTIR"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="250dp"
            android:onClick="CONVERTIR"
            android:text="CONVERTIR" />

        <TextView
            android:id="@+id/tvRESPUESTA"
            android:layout_width="248dp"
            android:layout_height="58dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="310dp"
            android:text="RESPUESTA..." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">



            <Button
                android:id="@+id/btnSIGUIENTE"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="150dp"
                android:text="SIGUIENTE>>>" />

        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>
